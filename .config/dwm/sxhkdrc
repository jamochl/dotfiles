# INDEPENDANT HOTKEYS #

## General keys ##

# alt program runner
super + shift + p
    rofi -window -4 -show run

# Toggle compositor
super + c
    pkill picom && notify-send "killed compositor" || \
    notify-send "started compositor"; picom --backend glx --vsync

# Toggle lockscreen
super + {shift,_} + x
    {xset s 0 0; notify-send 'screensaver off', xset s 900; notify-send 'screensaver on'}

# Toggle Notifications
super + {shift + ,_} n
    notify-send {'DUNST_COMMAND_PAUSE', 'DUNST_COMMAND_RESUME'; notify-send 'Notifications Resumed'}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Lock screen
super + alt + Escape
    slock

# Network manager
super + {_,shift +} Control_R
    alacritty -t nmtui -e {nmtui connect, nmtui}

# System Manager
super + Delete
    alacritty -t htop -e htop

# weather
super + w
    brave https://www.weatherzone.com.au/vic/melbourne/blackburn

# Show Network Manager applet
super + ctrl + Control_R
    killall nm-applet || nm-applet

# Volume control
{_,shift + }XF86Audio{RaiseVolume,LowerVolume}
    percent={5,1}; \
    /home/james/.local/system_scripts/volume_control.sh \
    {up,down} "$percent" && \
    bar_script.sh

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle && \
    bar_script.sh

# Bluetooth control
super + {F5, F6}
    bluetoothctl power {off && notify-send 'Bluetooth power off',on && notify-send 'Bluetooth power on'}

# Access fine volume control
super + F3
    alacritty -t alsamixer -e alsamixer

# Music control
{_,shift + ,super + } Pause
    playerctl {play-pause, --player=spotify play-pause, --all-players pause}

# Alt Music control
XF86Audio{Play,Pause}
    playerctl {play-pause, --all-players pause}

super + shift + {Left, Right}
    playerctl {previous, next}

# Brightness control
{_,shift + }XF86MonBrightnessUp
    sudo $HOME/.local/system_scripts/backlight_control.sh up {_,1} && \
    bar_script.sh

{_,shift + }XF86MonBrightnessDown
    sudo $HOME/.local/system_scripts/backlight_control.sh down {_,1} && \
    bar_script.sh

# Sleep (Add lockscreen)
XF86Sleep
    systemctl suspend

# Screenshoting
ctrl + {_,super} + Print
    flameshot {full,full} -c
    #flameshot {full,full} -p ~/pictures/screenshots
    #maim | xclip -selection clipboard -t image/png && notify-send 'Screenshot copied to clipboard'

{_,super} + Print
    flameshot {full,full} -p ~/pictures/screenshots
    #flameshot {full,full} -p ~/pictures/screenshots

ctrl + alt + Print
    maim -i $(xdotool getactivewindow)  | xclip -selection clipboard -t image/png && notify-send 'Screenshot copied to clipboard'

alt + Print
    maim -i $(xdotool getactivewindow) ~/pictures/screenshots/screenshot_$(date '+%Y-%m-%d_%H-%M-%S').png && notify-send 'Screenshot saved'

ctrl + shift + Print
    maim -s | xclip -selection clipboard -t image/png && notify-send 'Screenshot copied to clipboard'

shift + Print
    flameshot gui -p ~/pictures/screenshots
    #maim -s ~/pictures/screenshots/screenshot_$(date '+%Y-%m-%d_%H-%M-%S').png && notify-send 'Screenshot saved'

## Applications ##
#
# terminal emulator
super + t
	alacritty

# program launcher
super + d
	rofi -monitor -4 -show drun -show-icons

# program switcher
super + slash
    rofi -monitor -4 -show window -show-icons

# Open Browser
super + {_,shift +} r
    {brave, firefox}

#Open File browser
super + {_,shift} + e
    {pcmanfm,alacritty -e lf}

#Open various apps
ctrl + alt + o; {r, s, w}
    {rambox, spotify, echo "should open a network manager"}

#Emoji switcher
super + s
    emoji_select.sh
